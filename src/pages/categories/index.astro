---
import Base from "@/layouts/Base.astro";
const categories = [
  { slug: "mindset", title: "Mindset" },
  { slug: "pakistan-investing", title: "Pakistan Investing" },
  { slug: "global-investing", title: "Global Investing" },
  { slug: "savings-income", title: "Savings & Income" },
  { slug: "calculators", title: "Calculators" },
  { slug: "case-studies", title: "Case Studies" },
];

import { BiCategoryAlt } from "react-icons/bi";
---

<Base title={"Categories"}>
  <section class="section">
    <div class="container text-center">
      <h1 class="h2 page-heading">Categories</h1>
      <ul class="space-x-4">
        {
          categories.map((category) => (
            <li class="inline-block">
              <a
                href={`/categories/${category.slug}`}
                class="rounded-lg bg-light px-4 py-2 text-dark transition hover:bg-primary hover:text-white flex items-center group"
              >
                <BiCategoryAlt className="mr-1 text-primary group-hover:text-white transition h-6 w-6 scale-75" />
                {category.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Base>
