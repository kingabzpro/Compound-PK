---
import config from "@/config/config.json";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;

const logoSrc =
  (typeof src === "string" && src.trim()) ||
  (typeof logo === "string" && logo.trim()) ||
  "";
const brandText = logo_text?.trim() || title;
const logoWidth = String(logo_width || "230").replace("px", "");
const logoHeight = String(logo_height || "44").replace("px", "");
---

<a href="/" class="navbar-brand">
  {
    logoSrc ? (
      <img
        src={logoSrc}
        alt={title}
        width={logoWidth}
        height={logoHeight}
        loading="eager"
        decoding="async"
        style={{
          height: `${logoHeight}px`,
          width: `${logoWidth}px`,
        }}
      />
    ) : brandText ? (
      <span class="brand-text">{brandText}</span>
    ) : (
      title
    )
  }
</a>
