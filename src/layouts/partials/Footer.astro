---
import config from "@/config/config.json";
import menu from "@/config/menu.json";
import { markdownify } from "@/lib/utils/textConverter";
---

<footer class="site-footer section bg-dark">
  <div class="container">
    <div class="site-footer__top">
      <div class="site-footer__brand">
        <p class="site-footer__title">{config.site.logo_text}</p>
        <p class="site-footer__subtitle">Long-term investing, simplified.</p>
      </div>
      <nav aria-label="Footer links">
        <ul class="site-footer__menu">
          {
            menu.footer.map((item) => (
              <li>
                <a href={item.url} class="site-footer__link">
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
    <div class="site-footer__bottom">
      <p set:html={markdownify(config.params.copyright)} class="site-footer__copyright" />
    </div>
  </div>
</footer>
